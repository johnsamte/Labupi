<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bookmark_corner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelBtn"
            android:src="@drawable/icon_dot_menu"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numbers"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:text="20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitleText"
            android:layout_toEndOf="@+id/numbers"
            android:text="a main title hong ki display na d"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/noteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="italic"
            android:layout_marginStart="24dp"
            android:layout_below="@+id/mainTitleText"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>


        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created At"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_below="@+id/noteText"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>