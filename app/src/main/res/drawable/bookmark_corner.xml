<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Stroke for border -->
    <stroke
        android:width="1dp"
        android:color="@color/bookmark_radius" />

    <!-- Gradient for background -->
    <gradient
        android:startColor="@color/bookmark_bg"
        android:endColor="@color/bookmark_bg_end"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners
        android:topLeftRadius="10dp"
        android:bottomRightRadius="10dp" />
</shape>