<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Labupi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/offWhite</item>
        <item name="labupiBackground">@color/black</item>
        <item name="bnl_pnl_backG">@color/yellow</item>
        <item name="bnlpnlTextClr">@color/red</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
    <style name="Theme.Labupi" parent="Base.Theme.Labupi" />

    <style name="Theme.Labupi.Splash" parent="Theme.SplashScreen">
    <!-- Splash background color -->
    <item name="windowSplashScreenBackground">?attr/labupiBackground</item>
    <!-- Splash icon -->
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_dark</item>
    <!-- After splash, switch to app theme -->
    <item name="postSplashScreenTheme">@style/Theme.Labupi</item>

    </style>




</resources>